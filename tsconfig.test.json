{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": ["./tsconfig.base.json"],
	"compilerOptions": {
		"outDir": "${configDir}/.tsc",
		"tsBuildInfoFile": "${configDir}/.tsc/tsconfig.test.tsbuildinfo"
	},
	"include": ["${configDir}/test/**/*", "${configDir}/src/**/*.test.*"],
	"references": [{ "path": "./tsconfig.assets.json" }]
}
